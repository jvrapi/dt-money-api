generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Type {
  income
  outcome
}

model Transaction {
  id          String    @id @default(uuid())
  description String
  price       Decimal
  type        Type
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @default(now())
  Category    Category? @relation(fields: [categoryId], references: [id])
  categoryId  String?

  @@map("transactions")
}

model Category {
  id           String        @id @default(uuid())
  name         String
  description  String?
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @default(now())
  transactions Transaction[]

  @@map("categories")
}
